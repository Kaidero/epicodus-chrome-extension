{
  "manifest_version": 2,

  "name": "Epicodus Login",
  
  "description": "Your one stop shop for all things Epicodus! Built by students, for students.",
  
  "version": "1.1",

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Epicodus Login."
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications"
    ]
}
