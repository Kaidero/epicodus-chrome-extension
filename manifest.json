{
  "manifest_version": 2,

  "name": "Epicodus",

  "description": "Your one stop shop for all things Epicodus! Built by students, for students.",

  "version": "2.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Epicodus"
  },

  "permissions": [
    "https://*.epicodus.com/*",
    "http://*.epicodus.com/*",
    "notifications",
    "storage",
    "cookies",
    "geolocation",
    "alarms"
    ]
}
